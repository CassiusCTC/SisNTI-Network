      <div class="input-group">
        <span class="input-group-addon"><b>Informe as configuração da Sunet *</b></span>
        
         {{ form_widget (form.optionrouters, {'attr': {'class':'form-control','style':'resize:none'}})}}
      </div>
  </div>

</div> 

<div class="form-group">
     <div class="col-sm-12">   
       <br>
    	   {{ form_widget (form.submit, {'attr': {'class':'btn btn-primary btn-lg active'}})}}
         
         <button class="btn btn-default btn-lg" type="reset">Cancelar</button>
     </div>
</div>
     
    {{ form_end(form) }}
    </div>
 
 
