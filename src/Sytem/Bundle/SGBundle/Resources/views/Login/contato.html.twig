    <ul class="nav navbar-nav side-nav">
           
           <li><a href="{{ path('login') }}"><i class="glyphicon glyphicon-chevron-left"></i>  <strong>Login</strong></a></li>          
    </ul>
</div> 
 {% endblock col %} 

