{% block body -%}
<ol class="breadcrumb">
                                    <li>
                                       <a href="{{ path('homeadmin') }}">SysNTI - NetManager Adminstrador</a>
                                        
                                    </li>
                                    <li>
                                        <a href="{{ path('laboratorios') }}">Laboratorios -  Ufop</a>
                                    </li>
                                    <li class="active">
                                         Detalhes Laboratorio Ufop
                                    </li>
</ol>
<br>
<h3>Laboratorio</h3><br/><br/>

<div class="box-content" style="overflow:auto; height:400px">
    <!--<table class="records_list">-->

    <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead> <tr> <th colspan="2" style="text-align:center; font-size:25px; color:blue;">Detalhes Laboratorio</th></tr></thead>
        <tbody>{% if entity. nomeLaboratorio != "Dispositivos Externos" %}
           <tr>
           <th style="text-align:center;">Nome do laboratorio</th> 
                <td>{{ entity.nomeLaboratorio }}</td>
            </tr>
            <tr>
           <th style="text-align:center;">Bloco do laboratório</th> 
                <td>{{ entity.bloco }}</td>
            </tr>
            <tr>
           <th style="text-align:center;">Sala do laboratório</th>  
                <td>{{ entity.sala }}</td>
          </tr>
        </tbody>
    </table>
    <table>
      <tr>
      <td style="padding-left: 45px; text-align:center; font-size:18px; color:gray; font-weight: bold ;font-family: Arial;">Ações:</td>
            <td style="padding-left: 5px;">
                     <a class="btn btn-primary btn-lg active" href="{{ path('laboratorios_edit', { 'id':      entity.id }) }}"></i>Editar
                     </a> 
            
              <td style="padding-left: 10px;">    
                            <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#exampleModal">Delete</button>
                    </td> 
                    <td style="padding-left: 35px;">    
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                               
                              </div>
                              <div class="modal-body">
                                <div class="alert alert-danger" role="alert">
                                    <span style="font-size: 18px; font-weight: bold;">Deseja realmente deletar este item!!!</span> Caso sim clique em ok, caso contrario clique em canselar....
                                   

                                    </div>
                                   
                               
                              </div>
                              <div class="modal-footer">
                              <table>
                              <tr align="center">
                               <td> <button type="button" class="btn btn-default btn-lg"     data-dismiss="modal">Cancelar</button>
                               </td>
                                <td style="padding-left: 10px;">
                                                    
                                 {{ form_widget (delete_form.submit, {'attr': {'class':'btn btn-danger btn-lg active'}})}}

                                {{form_end(delete_form)}} </td>
                              </tr>
                              </table>
                              </div>
                            </div>
                          </div>
                        </div>
                    </td> 
        
      </tr>
      {% endif %} 
    </table>

</div>



{% endblock %}
