    <div  class="col-sm-8" style="margin:0px 50px 20px 150px;">
       {{form_start(form, {'attr': {'class':'form-horizontal'}}) }}
      <div class="form-group">
        <div  class="col-sm-12">
         {{ form_errors(form.nomeLaboratorio) }}
