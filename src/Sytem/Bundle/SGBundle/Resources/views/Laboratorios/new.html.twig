        <span class="input-group-addon"><b>Nome do laboratorio *</b></span>
           
          {{ form_widget(form.nomeLaboratorio, {'attr': {'class':'form-control'}}) }}  
      </div></div></div>  
      <div class="form-group">
        <div  class="col-sm-12">
        {{ form_errors(form.bloco) }}
        <div class="input-group">
        <span class="input-group-addon"><b>Informe o bloco do Laboratório *</b></span> 
          {{ form_widget(form.bloco, {'attr': {'class':'form-control'}}) }}
        </div></div></div>
      <div class="form-group">
        <div  class="col-sm-12">
         {{ form_errors(form.sala) }}
        <div class="input-group">
        <span class="input-group-addon"><b>Informe a sala do laboratorio *</b></span>
          {{ form_widget(form.sala, {'attr': {'class':'form-control'}}) }}
        </div></div></div>
        
          <div class="form-group" style="margin:0px 0px 0px 5px;">
        
           {{ form_widget (form.submit, {'attr': {'class':'btn btn-primary btn-lg active'}})}}

         <button class="btn btn-default btn-lg" type="reset">Cancelar</button>
              {{form_end(form)}}
   </div>

  
