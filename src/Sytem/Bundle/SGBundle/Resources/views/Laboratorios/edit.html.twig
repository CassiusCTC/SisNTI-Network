{% block body -%}
<ol class="breadcrumb">
                                    <li>
                                        <a href="{{ path('homeadmin') }}">SysNTI - NetManager Adminstrador</a>
                                        
                                    </li>
                                    <li>
                                        <a href="{{ path('laboratorios') }}">Laboratorios -  Ufop</a>
                                    </li>
                                    <li class="active">
                                         Editar Laboratorio Ufop
                                    </li>
</ol>
<br>

   
<div class="panel panel-primary" style="background-color:#FAFAFA">
<div class="panel-heading" style="font-size:18px"><strong>Editar Laboratorios</strong></div>
 <div class="panel-body">
    <div class="alert alert-info"> <p style="text-align:center; font-size:16px;"><strong> Obs: Todos os campos com asterisco são de preenchimento obrigatorio.</strong> </p></div>
    <div class="form-group"  >

      {% for flashMenssage in app.session.flashbag.get('message') %}
      <div class="alert alert-danger" style="text-align: center; font-size: 17px;"> 
           <button  type="button" class="close" data-dismiss="alert">x</button>
            <strong>{{ flashMenssage }}</strong>
      </div>
     {% endfor %} 
     
 
 </div>
{% if entity. nomeLaboratorio != "Dispositivos Externos" %}       
        {# form(form) #}
   <div class="table-responsive">
   <div class="row">
    <div  class="col-sm-8" style="margin:10px 20px 20px 60px;">
    	 {{form_start(edit_form, {'attr': {'class':'form-horizontal'}}) }}
    	<div class="form-group">
        <div  class="col-sm-12">
         {{ form_errors(edit_form.nomeLaboratorio) }}
        <div class="input-group">
        <span class="input-group-addon"><b>Nome do laboratorio *</b></span>
    			{{ form_widget(edit_form.nomeLaboratorio, {'attr': {'class':'form-control'}}) }}
        </div></div></div>            
         
      <div class="form-group">
        <div  class="col-sm-12">
       {{ form_errors(edit_form.bloco) }}
        <div class="input-group">
        <span class="input-group-addon"><b>Informe o bloco do Laboratório *</b></span> 
          {{ form_widget(edit_form.bloco, {'attr': {'class':'form-control'}}) }}
        </div></div></div>
       <div class="form-group">
        <div  class="col-sm-12">
        {{ form_errors(edit_form.sala) }}
        <div class="input-group">
        <span class="input-group-addon"><b>Informe a sala do laboratorio *</b></span> 
          {{ form_widget(edit_form.sala, {'attr': {'class':'form-control'}}) }}
        </div></div></div>
      
          <div class="form-group" style="margin:0px 0px 0px 5px;">
        
           {{ form_widget (edit_form.submit, {'attr': {'class':'btn btn-primary btn-lg active'}})}}
          {{form_end(edit_form)}}
                       
                            <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#exampleModal">Delete</button>
                    
                       
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                               
                              </div>
                              <div class="modal-body">
                                <div class="alert alert-danger" role="alert">
                                    <span style="font-size: 18px; font-weight: bold;">Deseja realmente deletar este item?</span> Caso sim clique em ok, caso contrario clique em canselar....
                                   

                                    </div>
                              
                              </div>
                              <div class="modal-footer">
                              <table>
                              <tr align="center">
                               <td> <button type="button" class="btn btn-default btn-lg"     data-dismiss="modal">Cancelar</button>
                               </td>
                                <td style="padding-left: 10px;"> 
                                {{form_start(delete_form) }}                    
                                                    
                                 {{ form_widget (delete_form.submit, {'attr': {'class':'btn btn-danger btn-lg active'}})}}

                                {{form_end(delete_form)}} </td>
                              </tr>
                              </table>
                          </div>
                          </div>
                          </div>
                          </div>
                          </div>
                           </div>
                          </div>





        </div>
        
{% endif %} 
        

      </div>
        </div>
 </div>

 
{% endblock %}
