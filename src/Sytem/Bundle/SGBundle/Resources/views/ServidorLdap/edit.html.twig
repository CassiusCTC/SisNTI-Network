{% block body -%}
 <ol class="breadcrumb">
                                    <li>
                                     <a href="{{ path('homeadmin') }}">SysNTI - NetManager Adminstrador</a>
                                        
                                    </li>
                                    <li class="active">
                                        <i class="fa fa-fw fa-table"></i> Editar configuração servidor LDAP:
                                    </li>
                     </ol>
<div class="panel panel-primary" style="background-color:#FAFAFA">
<div class="panel-heading" style="font-size:18px"><strong>Editar configuração do Ldap</strong></div>
 <div class="panel-body">
    <div class="alert alert-info"> <p style="text-align:center; font-size:16px;"><strong> Obs: Todos os campos com asterisco são de preenchimento obrigatorio.</strong> </p></div>
   

      {% for flashMenssage in app.session.flashbag.get('message') %}
      <div class="alert alert-info" style="text-align: center; font-size: 17px;"> 
           <button  type="button" class="close" data-dismiss="alert">x</button>
            <strong>{{ flashMenssage }}</strong>
      </div>
     {% endfor %} 
       
 
  <field>
  <br/><br/>
<div class="table-responsive" >  
 
  <div  class="col-sm-10" style="margin:0px 20px 20px 80px;">
    {{form_start(edit_form, {'attr': {'class':'form-horizontal'}}) }}
          
            {{ form_label(edit_form.ipLdap,'IP servidor*:' ,{'label_attr': {'class':'control-label'}}) }}
                 
                 <span style="color:red;">{{ form_errors(edit_form.ipLdap) }} </span>
            
              {{ form_widget (edit_form.ipLdap, {'attr': {'class':'form-control','data-mask':'099.099.099.099','placeholder':'099.099.099.099'}} )}}
        
            {{ form_label(edit_form.complemento,'Complemento*:' ,{'label_attr': {'class':'control-label'}}) }}
          
              {{ form_errors(edit_form.complemento) }}
            
              {{ form_widget (edit_form.complemento, {'attr': {'class':'form-control'}})}}
           
            {{ form_label(edit_form.username,'Username:' ,{'label_attr': {'class':' control-label'}}) }}
            
            {{ form_errors(edit_form.username) }}
            
              {{ form_widget (edit_form.username, {'attr': {'class':'form-control'}})}}
     
            {{ form_label(edit_form.password,'Password:' ,{'label_attr': {'class':' control-label'}}) }}
            {{ form_errors(edit_form.password) }}
            
              {{ form_widget (edit_form.password , {'attr': {'class':'form-control'}})}}
              </br>
              {{ form_widget (edit_form.submit, {'attr': {'class':'btn btn-primary btn-lg active'}})}}
                  {{form_end(edit_form)}}
               </br>
         </div>
       </div>
  </div>
  </div>
   </div>
    
    
  <!--</div>-->
    

